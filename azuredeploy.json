{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Globally unique name for the Storage Account (lowercase letters and numbers only)."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "allowedValues": [
        "eastus", "eastus2", "centralus", "westus", "westus2", "westeurope", "northeurope"
      ],
      "metadata": {
        "description": "Location for all resources. Limited to trusted regions."
      }
    },
    "enableHttpsTrafficOnly": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Ensures storage accounts only allow HTTPS traffic."
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Environment": "PoC",
        "Owner": "DevOps",
        "Application": "AzureIaC",
        "CostCenter": "12345"
      },
      "metadata": {
        "description": "Tags to apply to the resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[parameters('storageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": "[parameters('enableHttpsTrafficOnly')]",
        "allowBlobPublicAccess": false
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    }
  }
}